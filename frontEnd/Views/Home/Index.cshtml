@using frontEnd.Models;
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<section class="relative bg-[#f7f7f7] mb-12 rounded-lg overflow-hidden flex h-[320px]">
    <div class="flex-1 p-12 flex flex-col justify-center bg-blue-50">
        <h1 class="text-4xl font-bold mb-4">Upgrade your gaming setup</h1>
        <p class="text-lg text-gray-600 mb-8">Up to 40% off the latest consoles and accessories.</p>
        <button
            class="bg-gray-900 text-white w-fit px-8 py-3 rounded-full font-semibold hover:bg-black flex items-center gap-2">
            Shop now <span class="material-symbols-outlined">arrow_forward</span>
        </button>
    </div>
    <div class="flex-1 relative">
        <img alt="Promo" class="absolute inset-0 w-full h-full object-cover"
            src="https://lh3.googleusercontent.com/aida-public/AB6AXuB4Gd8HO8oQfFJtDho3C8AJJXbxBAVfscRK7iBE3IPI5Sm-kIDakdf8Mrh8zfCczdBulb5TIaCsy-p9ZzSYj9a-io8tx5K6j1NQTajX_ke1kwDz93qP3rGKoZ29WIendspLGjuiilRBoXdr0g3N9OvYEoIlx2RH-NLUVKeuztI_f74VyI0mvW95libU7kgXB4PZtDaC52NSVFJ6jJrAfGkPJ1vf15gtHEGcD-hCNEuns6kbJHrBGTXYmPZibYkyV-GvuHhZs8V41sGc" />
    </div>
</section>

<section class="mb-12">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">Sản phẩm nổi bật</h2>
        <a class="text-blue-600 hover:underline text-sm font-medium" href="/Product">Xem tất cả</a>
    </div>

    @if (ViewData["ApiError"] != null)
    {
        <div
            class="bg-yellow-50 border border-yellow-300 text-yellow-800 rounded-lg px-4 py-3 mb-6 flex items-center gap-2">
            <span class="material-symbols-outlined text-yellow-600">warning</span>
            <span>@ViewData["ApiError"]</span>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-16 text-gray-400">
            <span class="material-symbols-outlined text-5xl mb-3 block">inventory_2</span>
            <p class="text-lg">Chưa có sản phẩm nào. Hãy chạy backend và seed data!</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
            @foreach (var product in Model)
            {
                <div class="group cursor-pointer">
                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">
                        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-3">
                            @if (!string.IsNullOrEmpty(product.Image))
                            {
                                <img alt="@product.Title"
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-200"
                                     src="~/@product.Image" />
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center bg-gray-200">
                                    <span class="material-symbols-outlined text-4xl text-gray-400">image_not_supported</span>
                                </div>
                            }
                        </div>
                        <h3 class="text-sm font-medium line-clamp-2 mb-1 group-hover:underline">@product.Title</h3>
                        <div class="text-base font-bold text-gray-900 mb-1">
                            @product.Price?.ToString("N0") ₫
                        </div>
                        @if (!string.IsNullOrEmpty(product.CategoryName))
                        {
                            <div class="text-xs text-blue-500">@product.CategoryName</div>
                        }
                        @if (!string.IsNullOrEmpty(product.SellerName))
                        {
                            <div class="text-xs text-gray-400">Bởi: @product.SellerName</div>
                        }
                    </a>
                </div>
            }
        </div>
    }
</section>

